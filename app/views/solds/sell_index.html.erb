<p id="notice"><%= notice %></p>

<h1>Solds</h1>

<table>
  <thead>
    <tr>
      <th>Article</th>
      <th>Propose par</th>
      <th>Price</th>
      <th>Closed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @solds.each do |sold| %>
      <tr>
        <td><%= sold.article.name %></td>
        <td><%= sold.user.email %></td>
        <td><%= sold.price %></td>
        <td><%= sold.closed %></td>
        <% if sold.closed %>
          <td rowspan="2">
              <% if sold.accept %>
                Accepté le
              <% else %>
                Refusé le
              <% end %> <%= sold.updated_at.strftime("%d/%m/%y") %>
          </td>
        <% else %>
          <td><%= link_to  "Accepter", accept_solds_path(id: sold.id) %></td>
          <td><%= link_to  "Reffuser", refuse_solds_path(id: sold.id) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

